{
  "manifest_version": 3,
  "name": "Bold Text Engine",
  "version": "1.0.0",
  "description": "Transform your text into stunning Unicode styles. Perfect for LinkedIn, social media, and anywhere you want to make your text stand out!",
  
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "scripting"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Bold Text Engine"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils/textConverters.js",
        "content/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}

